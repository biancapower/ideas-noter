{{#each ideas}}
  <div class="card card-body mt-4">
    <h4>{{title}}</h4>
    <p>{{details}}</p>
    <a href="/ideas/edit/{{id}}" class="btn btn-info btn-block mt-5 mb-2">Edit</a>
    <form class="" action="/ideas/{{id}}?_method=DELETE" method="post">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" name="" value="Delete" class="btn btn-danger btn-block">
    </form>
  </div>
{{else}}
  <p>No ideas yet. Why don't you add one?</p>
{{/each}}
